    <div class="container-fluid p-0">
        <!-- About Section -->
        <section class="resume-section" id="about">
            <div class="resume-section-content">
                <h1 class="mb-0">
                    Ara Andrea <span class="text-primary">Roman</span>
                </h1>
                <div class="subheading mb-5">
                    New San Jose Sulidum Street ·
                    <a href="mailto:Romana034@gmail.com">Romana034@gmail.com</a>
                </div>
